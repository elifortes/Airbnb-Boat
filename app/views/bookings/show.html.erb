<h2>New Booking</h2>
<%= simple_form_for @booking, url: bookings_path do |f| %>
  <%= f.input :start_date, as: :date_select %>
  <%= f.input :end_date, as: :date_select %>
  <%= f.input :status %>
  <%= f.input :total_price %>

  <div class="actions">
    <%= f.button :submit, 'Create Booking' %>
  </div>
<% end %>

<p><%= link_to 'Back to Boats', boats_path %></p>

<%= link_to 'Edit', edit_boat_path(@boat) %> |
<%= link_to 'Back', boats_path %>


<h1>All Bookings</h1>
  <% if @bookings.any? %>
    <ul>
      <% @bookings.each do |booking| %>
        <li>
          <%= link_to "Booking ##{booking.id}", booking_path(booking) %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No bookings available.</p>
  <% end %>
<% end %>
