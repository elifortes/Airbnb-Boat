<div class="container-fluid">
  <div class="row">
    <section class="lats col-6">
      <div>
        <%= link_to 'back to Boats', boats_path %>
        <div id="boatPhotosCarousel" class="carousel slide" data-bs-ride="carousel" data-controller="carousel">
          <div class="carousel-inner">
            <% @boat.photos.each_with_index do |photo, index| %>
              <div class="carousel-item <%= 'active' if index.zero? %>">
                <%= cl_image_tag(photo.key, height: 300, width: 500, crop: :fill) %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#boatPhotosCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          </a>
          <a class="carousel-control-next" href="#boatPhotosCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
          </a>
        </div>
        <div class="container my-3">
          <div class = "container py-5">
            <div class = "">
              <div class = "">
                <h3><%= @boat.title %></h3>
                <p><strong> Description: </strong> <%= @boat.description %></p>
                <p><strong> Price : </strong> <%= @boat.price_per_unit %></p>
                <%# <p><strong> Reviews: </strong> <%= @boat.reviews %>
                <p><strong> Captain : </strong> <%= @boat.captain_name %></p>
                <p><strong> Capacity: </strong> <%= @boat.guest_capacity %></p>
                <p><strong> Availability from: </strong> <%= @boat.availability_from %></p>
                <p><strong> Availability_to: </strong> <%= @boat.availability_to %></p>
                <p><strong> Made By: </strong> <%= @boat.boat_maker_name %></p>
                <p><strong> Model: </strong> <%= @boat.boat_model %></p>
                <p><strong> Length: </strong> <%= @boat.boat_size %></p>
                <p><strong> Year: </strong> <%= @boat.year_made %></p>
                <%# <%= link_to 'Delete Boat', boat_path(@boat), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this boat?' }, class: 'btn btn-danger' %>
                <%# link_to 'Edit Boat', edit_boat_path(@boat), class: "btn btn-success" %>
                <v%# cl_image_tag(@boat.photos.first.key, height: 200, width: 650, crop: :fill) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="flats col-6">
        <div class = "container my-3">
          <h1>Thank you for you booking!</h1>
          <p>
            <strong>Booking Details</strong>
          </p>
          <p>
            <strong>Boat: </strong> <%= @boat.title %><br>
            <strong>Start Date: </strong><%= @booking.start_date %><br>
            <strong>End Date: </strong> <%= @booking.end_date %><br>
            <strong>Total Days: </strong> <%= (@booking.end_date - @booking.start_date).to_i %><br>
            <strong>Total Price: </strong> <%= number_to_currency(@total_price) %>
          </p>
          <h2>Choose how to pay:</h2>
          <br>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
            <label class="form-check-label" for="flexRadioDefault1">
              <p><strong>Pay in full: $ (<%=number_to_currency(@total_price) %>)</strong></p>
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
            <label class="form-check-label" for="flexRadioDefault2">
              <p><strong>Pay part now $ (<%=number_to_currency(@total_price / 2) %>), part later on <%= @booking.start_date + 5 %></strong></p>
            </label>
          </div>
          <p></p>
          <%= link_to 'Confirm', dashboards_clientbookings_path, class: 'btn btn-primary' %>
        </div>
      </section>
    </div>
  </div>
</div>
</div>
