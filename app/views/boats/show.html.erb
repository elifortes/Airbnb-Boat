<div class="container my-3">

  <h1>Welcome to <strong><%= @boat.title %> boat</strong></h1>
  <p><%= @boat.description %><br></p>


<div id="boatPhotosCarousel" class="carousel slide" data-bs-ride="carousel" data-controller="carousel">
  <div class="carousel-inner">
    <% @boat.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= 'active' if index.zero? %>">
        <%= cl_image_tag(photo.key, height: 300, width: 500, crop: :fill) %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#boatPhotosCarousel" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </a>
  <a class="carousel-control-next" href="#boatPhotosCarousel" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </a>
</div>


<%# Boat detail list %>

  <ul style="list-style: none; padding: 0;">
    <li style="display: inline; margin-right: 10px;"><strong>Size:</strong> <%= @boat.boat_size %></li>
    <li style="display: inline; margin-right: 10px;"><strong>Guests:</strong> <%= @boat.guest_capacity %></li>
    <li style="display: inline; margin-right: 10px;"><strong>Year:</strong> <%= @boat.year_made %></li>
    <li style="display: inline;"><strong>Model:</strong> <%= @boat.boat_model %></li>
  </ul>

  <br>


  <h2><small>Request to book</small></h2>
  <%= simple_form_for [@boat, @booking] do |f| %>
  <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :end_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :total_price %>
  <%= f.input :status %>
  <% end %>

  <%= link_to 'Continue', edit_boat_path(@boat), class: 'btn btn-primary' %> |
  <%= link_to 'Back to Boats', boats_path %>

</div>
